<script>
	
	function pulaLinha() {

		document.write("<br>");	

	}

	function mostra(frase) {

		pulaLinha();
		document.write(frase);
		pulaLinha();
    
	}
    
    var numeroDeVitorias = parseInt(prompt("Informe o número de vitórias do seu time: "));
    var numeroDeEmpates = parseInt(prompt("Informe o número de empates do seu time: "));

    var pontuacaoDoTime = numeroDeVitorias 
    * 3 + numeroDeEmpates; 
    
    
    mostra("A pontuação do seu time é: " + pontuacaoDoTime  + " pontos. ");
    if (pontuacaoDoTime > 28) {
    mostra("Seu time está melhor do que o ano passado.");
    
    }

    if (pontuacaoDoTime < 28) {
    mostra("Seu time está pior do que o ano passado.");
    
    }

    if (pontuacaoDoTime == 28) {
    mostra("Seu time está igual do que o ano passado.");
    
    }


</script>
