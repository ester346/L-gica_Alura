<script>

    function pulaLinha() {

      document.write("<br>");	

    }

    function mostra(frase) {

      pulaLinha();
      document.write(frase);
      pulaLinha();
    }

    var numeroDeVitorias = prompt("Informe o número de vitórias do seu time: ");
    var numeroDeEmpates = prompt("Informe o número de empates do seu time: ");

    var pontuacaoDoTime = parseInt(numeroDeVitorias) 
    * 3 + parseInt(numeroDeEmpates);
    
    mostra("O número de vitórias do time do usuário é: " + numeroDeVitorias);
    mostra("O número de derrotas do time do usuário é: " + numeroDeEmpates);
    mostra("A pontuação do seu time é: " + pontuacaoDoTime + " pontos. ");


</script>
